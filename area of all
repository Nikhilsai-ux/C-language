#include<stdio.h>
void main()
{
   int choice,a,b;
   printf("enter choice");
   scanf("%d",&choice);
   if  (choice==1)
 { printf("enter a");
   scanf("%d",&a);
   int s;
   s=a*a;
   printf("area of square is %d",s);}
  else  if(choice==2)
  { printf("enter a");
   scanf("%d",&a);
   int c;
   c=3.14*a*a;
   printf("area of circle is:%d",c);}
   else if (choice==3)
   
 { printf("enter a,b");
   scanf("%d%d",&a,&b);
   int t;
   t=0.5*a*b;
   printf("area of triangle is %d",t);}
else if(choice==4)
  
   printf("enter a,b");
   scanf("%d%d",&a,&b);
   int r;
   r=a*b,
   printf("area of rectangle is %d",r);
  
  
}
